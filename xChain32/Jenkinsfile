pipeline {

    agent any

    environment {
        // DockerHub credentials from Jenkins
        DOCKERHUB = credentials('dockerhub')

        // SonarQube token from Jenkins
        SONAR = credentials('sonar-token')

        // AWS Credentials from Jenkins
        AWS_ACCESS_KEY = credentials('aws-access-key')
        AWS_SECRET_KEY = credentials('aws-secret-key')
        AWS_REGION_NAME = credentials('aws-region-name')
        AWS_BUCKET_NAME = credentials('aws-bucket-name')

        // Docker image destination
        IMAGE = "black0list/cargosync:latest"
    }

    stages {

        stage('Checkout Code') {
            steps {
                echo "ðŸ“¥ Pulling code from GitHub..."
                checkout scm
            }
        }

        stage('Build & Test') {
            steps {
                dir('xChain32') {       // <<<<<<<<<< FIX
                    echo "ðŸ§ª Running Maven tests..."
                    sh 'mvn clean verify'
                }
            }
            post {
                always {
                    dir('xChain32') {   // <<<<<<<<<< FIX
                        echo "ðŸ“¦ Publishing test reports..."
                        junit '**/target/surefire-reports/*.xml'
                    }
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('xChain32') {       // <<<<<<<<<< FIX
                    echo "ðŸ” Running SonarQube analysis..."
                    withSonarQubeEnv('SonarQube') {
                        sh """
                            mvn sonar:sonar \
                              -Dsonar.projectKey=CargoSync \
                              -Dsonar.projectName='CargoSync' \
                              -Dsonar.host.url=http://YOUR_SONAR_IP:9000 \
                              -Dsonar.login=${SONAR}
                        """
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "ðŸ³ Building Docker image..."
                sh "docker build -t ${IMAGE} xChain32"    // <<<<<<<<<< FIX
            }
        }

        stage('Push to DockerHub') {
            steps {
                echo "ðŸ“¤ Pushing image to DockerHub..."
                sh """
                    echo "${DOCKERHUB_PSW}" | docker login \
                        --username ${DOCKERHUB_USR} --password-stdin
                    docker push ${IMAGE}
                """
            }
        }
    }

    post {
        success {
            echo "ðŸš€ Pipeline completed successfully!"
        }
        failure {
            echo "âŒ Pipeline failed."
        }
    }

}
