pipeline {

    agent any

    environment {
        DOCKERHUB = credentials('dockerhub')

        SONAR = credentials('sonar-token')

        // AWS Credentials from Jenkins
        AWS_ACCESS_KEY = credentials('aws-access-key')
        AWS_SECRET_KEY = credentials('aws-secret-key')
        AWS_REGION_NAME = credentials('aws-region-name')
        AWS_BUCKET_NAME = credentials('aws-bucket-name')

        // Docker image destination
        IMAGE = "black0list/cargosync:latest"

        SONAR_HOST_URL = "http://38.242.220.11:9000"
    }

    stages {

        stage('Checkout Code') {
            steps {
                echo "üì• Pulling code from GitHub..."
                checkout scm
            }
        }

        stage('Build & Test') {
            steps {
                echo "üß™ Running Maven tests..."
                dir('xChain32') {
                    sh 'mvn clean verify'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                echo "üîç Running SonarQube analysis..."

                withSonarQubeEnv('SonarQube') {
                    dir('xChain32') {

                        sh """
                            mvn clean verify sonar:sonar \
                                -Dsonar.projectKey=CargoSync \
                                -Dsonar.projectName='CargoSync' \
                                -Dsonar.host.url=${SONAR_HOST_URL} \
                                -Dsonar.token=${SONAR} \
                                -Dsonar.java.coveragePlugin=jacoco \
                                -Dsonar.coverage.jacoco.xmlReportPaths=target/site/jacoco/jacoco.xml \
                                -Dsonar.junit.reportPaths=target/surefire-reports \
                                -Dsonar.sources=src/main/java \
                                -Dsonar.tests=src/test/java \
                                -Dsonar.java.binaries=target/classes \
                                -Dsonar.java.test.binaries=target/test-classes \
                                -Dsonar.inclusions=src/main/java/**/service/**,src/main/java/**/controller/** \
                                -Dsonar.exclusions=src/main/java/**/entity/**,src/main/java/**/dto/**,src/main/java/**/mapper/**,src/main/java/**/config/**,src/main/java/**/exception/**,src/main/java/**/enums/**,src/main/java/**/repository/**,src/main/java/**/security/**,src/main/java/**/util/**,src/main/java/**/Application.java
                        """
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "üê≥ Building Docker image..."
                dir('xChain32') {
                    sh "docker build -t ${IMAGE} ."
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                echo "üì§ Pushing image to DockerHub..."
                sh """
                    echo "${DOCKERHUB_PSW}" | docker login \
                        --username ${DOCKERHUB_USR} --password-stdin
                    docker push ${IMAGE}
                """
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                    cd /apps/cargosync
                    docker compose down
                    docker compose up -d --build
                '''
            }
        }
    }

    post {
        success {
            emailext(
                to: "dev-team@example.com",
                subject: "‚úî SUCCESS: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                mimeType: 'text/html',
                body: """
                    <html>
                    <body style="font-family:Arial, sans-serif;">
                        <h2 style="color:green;">‚úî Build Successful</h2>

                        <h3>üìå Project Information</h3>
                        <ul>
                            <li><b>Project:</b> ${env.JOB_NAME}</li>
                            <li><b>Build #:</b> ${env.BUILD_NUMBER}</li>
                            <li><b>Branch:</b> ${env.GIT_BRANCH}</li>
                            <li><b>Duration:</b> ${currentBuild.durationString}</li>
                        </ul>

                        <h3>üõ† Commit Info</h3>
                        <ul>
                            <li><b>Author:</b> ${env.GIT_AUTHOR_NAME}</li>
                            <li><b>Message:</b> ${env.GIT_COMMIT_MESSAGE}</li>
                        </ul>

                        <h3>üìä Reports</h3>
                        <ul>
                            <li><a href="${env.BUILD_URL}console">üîç Build Console</a></li>
                            <li><a href="${env.BUILD_URL}testReport">üß™ Test Report</a></li>
                            <li><a href="https://your-sonarqube-url/dashboard?id=CargoSync">
                                üìà SonarQube Dashboard
                            </a></li>
                        </ul>

                        <hr>
                        <p style="font-size:12px; color:#777;">
                            Sent automatically by Jenkins CI - ${env.JOB_NAME}.
                        </p>
                    </body>
                    </html>
                """
            )
        }

        failure {
            emailext(
                to: "dev-team@example.com",
                subject: "‚ùå FAILED: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                mimeType: 'text/html',
                body: """
                    <html>
                    <body style="font-family:Arial, sans-serif;">
                        <h2 style="color:red;">‚ùå Build Failed</h2>

                        <h3>üìå Project Information</h3>
                        <ul>
                            <li><b>Project:</b> ${env.JOB_NAME}</li>
                            <li><b>Build #:</b> ${env.BUILD_NUMBER}</li>
                            <li><b>Branch:</b> ${env.GIT_BRANCH}</li>
                        </ul>

                        <h3>üî• Error Log</h3>
                        <p>Please check the console output:</p>
                        <p><a href="${env.BUILD_URL}console">üîç View Console Log</a></p>

                        <h3>üß™ Test Failures</h3>
                        <p><a href="${env.BUILD_URL}testReport">View Failed Tests</a></p>

                        <p style="font-size:12px; color:#777;">
                            Sent automatically by Jenkins CI
                        </p>
                    </body>
                    </html>
                """
            )
        }
    }
}
